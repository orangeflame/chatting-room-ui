{
  "name": "chatting-room-ui",
  "version": "1.0.0",
  "description": "frontend workshop",
  "main": "index.ts",
  "repository": "git@github.com:orangeflame/chatting-room-ui.git",
  "author": "le.zheng <le.zheng@ef.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "NODE_ENV=production node dist/server/index.js",
    "lint": "tslint -p . -c tslint.json",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "test": "jest",
    "build": "next build && tsc --module commonjs",
    "clean": "rimraf .next dist"
  },
  "dependencies": {
    "@zeit/next-typescript": "^0.1.1",
    "express": "^4.16.3",
    "luxon": "^1.0.0",
    "next": "^5.1.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "styled-components": "^3.2.5",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "@types/next": "^2.4.8",
    "@types/node": "^9.6.1",
    "@types/react": "^16.1.0",
    "@types/winston": "^2.3.8",
    "babel-plugin-styled-components": "^1.5.1",
    "jest": "^22.4.3",
    "jest-junit": "^3.6.0",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "svg-inline-loader": "^0.8.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-immutable": "^4.5.2",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "setupFiles": [
      "./jest/mocks.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".d.ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
